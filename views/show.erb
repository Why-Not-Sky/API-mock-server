<div id="main-container" class="row">
  <div id="list-api-div" class="col-md-5">
    <%= partial :api_list, locals: { current: @route } %>
  </div>

  <div id="show-api-div" class="col-md-7">
    <div class="div-container">
      <ul class="breadcrumb">
        <li>
          <a href="/admin/<%= @route.id %>">
            <span class="text text-danger"><%= @route.verb.upcase %></span>
            <strong><%= @route.pattern %></strong>
          </a>
        </li>
          <div class='pull-right dropdown'>
           <a href='javascript:void(0)' class="dropdown-toggle" data-toggle="dropdown">操作<b class="caret"></b></a>
           <div class='dropdown-menu'>
             <li><a href='/admin/<%= @route.id %>/edit'>编辑</a></li>
             <li><a href='/admin/<%= @route.id %>' class='delete'>删除</a></li>
           </div>
           </div>
      </ul>

      <% if @route.params && !@route.params.empty? %>
        <div class="well">
          <div>Params</div>
            <div class='col-lg-offset-1'>
              <% @route.params.each do |key, value| %>
                <div class='row'>
                  <div class='col-lg-4'>
                    <strong><%= key %>:</strong>
                  </div>
                  <div class='col-lg-8'>
                    <%= value %>
                  </div>
                </div>
              <% end %>
            </div>
        </div>
      <% end %>

      <div id="show-api-response-div" class="well">
        <ul class="nav nav-tabs">
          <li class="nav-label">Response</li>
          <li class="label <%= @route.status.to_s =~ /2\d{2}/ ? 'label-success' : 'label-danger' %>"><%= @route.status %></li>
        </ul>
        <pre class="prettyprint" ref="response-json">
         <%= @route.response %>
        </pre>
      </div>
    </div>
  </div>
</div>
